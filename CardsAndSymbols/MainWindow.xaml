<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:CardsAndSymbols"
        x:Class="CardsAndSymbols.MainWindow"
        x:Name="mainWindow"
        Title="Cards and Symbols" Height="600" Width="1000">
    <Grid x:Name="AppGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Controls -->
        <StackPanel Grid.Column="0" Margin="5">
            <Label>Num Cards:</Label>
            <TextBox Height="30" Margin="0,0,0,5" 
                     Text="{Binding NewNumCards, Mode=TwoWay}"/>
            
            <Label>Images:</Label>
            <TextBox Height="30" Margin="0,0,0,5" 
                     Text="{Binding ImageDirectory, Mode=TwoWay}"/>
            
            <Button Height="30" Margin="0,0,0,5" Click="HandleNewClick">New</Button>
            <Button Height="30" Margin="0,0,0,5" Click="HandleSaveClick">Save</Button>
            <Button Height="30" Margin="0,0,0,5" Click="HandleLoadClick">Load</Button>
            
            <CheckBox Margin="0,5,0,5" 
                     IsChecked="{Binding AutoSaveEnabled, Mode=TwoWay}">
                Auto-save
            </CheckBox>
            
            <Label>Scale:</Label>
            <Slider Margin="0,0,0,5" 
                    Value="{Binding CardScaleFactor, Mode=TwoWay}" 
                    Minimum="0.4" Maximum="3"/>
            <TextBlock Margin="0,0,0,5" 
                      Text="{Binding CardWidthInches, StringFormat='Card width: {0:F2} inches'}"/>

            <Button Height="30" Margin="0,10,0,0" Click="HandlePrintClick">Generate PDF</Button>
        </StackPanel>
        
        <!-- Right Panel: Cards -->
        <ScrollViewer Grid.Column="1">
            <ItemsControl x:Name="CardContainer" 
                         ItemsSource="{Binding Cards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="{Binding NumCardColumns, RelativeSource={RelativeSource AncestorType=Window}}" 
                                   Margin="0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="local:CardData">
                        <local:CardViewer CardData="{Binding}"
                                        Padding="0"
                                        Margin="5"
                                        CardBaseSize="{Binding CardBaseSize, RelativeSource={RelativeSource AncestorType=local:MainWindow}}"
                                        CardScaleFactor="{Binding CardScaleFactor, RelativeSource={RelativeSource AncestorType=local:MainWindow}}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
