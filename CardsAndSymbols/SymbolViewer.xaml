<UserControl x:Class="CardsAndSymbols.SymbolViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardsAndSymbols"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:SymbolSizeToScaleConverter x:Key="ScaleConverter"/>
    </UserControl.Resources>
    <Grid>
        <Image Source="{Binding Path=ImageFile}" RenderTransformOrigin="0.5,0.5" Stretch="Uniform"
               MouseLeftButtonUp="HandleMouseLeftButtonUp" MouseLeftButtonDown="HandleMouseLeftButtonDown" MouseMove="HandleMouseMove">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="{Binding Converter={StaticResource ScaleConverter}, Path=Size}"
                                    ScaleY="{Binding Converter={StaticResource ScaleConverter}, Path=Size}"/>
                    <TranslateTransform X="{Binding Path=OffsetX}" Y="{Binding Path=OffsetY}"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>
